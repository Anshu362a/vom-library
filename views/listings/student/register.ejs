<section class="student-register">
  <div class="register-box">
    <h2>Student Registration</h2>

    <form action="/student/register" method="POST" novalidate>

      <!-- Name -->
      <div class="mb-3">
        <input type="text" name="name" class="form-control <% if (errors?.name) { %>is-invalid<% } %>" placeholder="Full Name" required value="<%= formData?.name || '' %>">
        <% if (errors?.name) { %>
          <div class="invalid-feedback"><%= errors.name %></div>
        <% } %>
      </div>

      <!-- Email -->
      <div class="mb-3">
        <input type="email" name="email" class="form-control <% if (errors?.email) { %>is-invalid<% } %>" placeholder="Email Address" required value="<%= formData?.email || '' %>">
        <% if (errors?.email) { %>
          <div class="invalid-feedback"><%= errors.email %></div>
        <% } %>
      </div>

      <!-- Mobile -->
      <div class="mb-3">
        <input type="tel" name="mobile" class="form-control <% if (errors?.mobile) { %>is-invalid<% } %>" placeholder="Mobile Number" required value="<%= formData?.mobile || '' %>">
        <% if (errors?.mobile) { %>
          <div class="invalid-feedback"><%= errors.mobile %></div>
        <% } %>
      </div>

      <!-- Access Code -->
      <div class="mb-3">
        <input type="text" name="accessCode" class="form-control <% if (errors?.accessCode) { %>is-invalid<% } %>" placeholder="Enter Code Provided by Admin" required value="<%= formData?.accessCode || '' %>">
        <% if (errors?.accessCode) { %>
          <div class="invalid-feedback"><%= errors.accessCode %></div>
        <% } %>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <input type="password" name="password" id="password" class="form-control <% if (errors?.password) { %>is-invalid<% } %>" placeholder="Password (Min 6 chars, 1 uppercase, 1 symbol, 1 number)" pattern="(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\\W).{6,}" required>
        <% if (errors?.password) { %>
          <div class="invalid-feedback"><%= errors.password %></div>
        <% } %>
        <div id="passwordFeedback" class="form-text"></div>
      </div>

      <!-- Confirm Password -->
      <div class="mb-3">
        <input type="password" name="confirmPassword" class="form-control <% if (errors?.confirmPassword) { %>is-invalid<% } %>" placeholder="Confirm Password" required>
        <% if (errors?.confirmPassword) { %>
          <div class="invalid-feedback"><%= errors.confirmPassword %></div>
        <% } %>
      </div>

      <!-- Submit -->
      <div class="d-grid">
        <button type="submit" class="btn btn-primary">Register</button>
      </div>
    </form>

    <p class="mt-3 text-center">
      Already registered? <a href="/student/login">Login here</a>
    </p>
  </div>
</section>

