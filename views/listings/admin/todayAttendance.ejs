<h2>ğŸ“† Today's Attendance</h2>

<div class="summary-boxes">
  <p><strong>âœ… Total Present:</strong> <%= totalPresent %></p>
  <p><strong>âŒ Not Marked:</strong> <%= totalAbsent %></p>

  <form action="/admin/today-attendance/export-csv" method="GET" style="display:inline;">
  <button class="btn btn-sm btn-success" type="submit">ğŸ“„ Export CSV</button>
</form>

  <form action="/admin/today-attendance/export-pdf" method="GET" style="display:inline;">
  <button class="btn btn-sm btn-danger" type="submit">ğŸ“ Export PDF</button>
</form>

</div>

<table>
  <thead>
    <tr>
      <th>Sr.No.</th>
      <th>Name</th>
      <th>ID</th>
      <th>Entry</th>
      <th>Exit</th>
      <th>Status</th>
      <th>Hours Present</th>
    </tr>
  </thead>
  <tbody>
    <% students.forEach((student, idx) => {
      const today = student.attendance.find(a => 
        new Date(a.entryTime).toDateString() === new Date().toDateString()
      );
      if (today) {
        let duration = 'â€”';
        if (today.entryTime && today.exitTime) {
          const entry = new Date(today.entryTime);
          const exit = new Date(today.exitTime);
          const diffMs = exit - entry;
          const hours = Math.floor(diffMs / 1000 / 60 / 60);
          const mins = Math.floor((diffMs / 1000 / 60) % 60);
          duration = `${hours}h ${mins}m`;
        }
    %>
      <tr>
        <td><%= idx + 1 %></td>
        <td><%= student.name %></td>
        <td><%= student.studentId %></td>
        <td><%= new Date(today.entryTime).toLocaleTimeString() %></td>
        <td><%= today.exitTime ? new Date(today.exitTime).toLocaleTimeString() : 'â€”' %></td>
        <td><%= today.status %></td>
        <td><%= duration %></td>
      </tr>
    <% }}) %>
  </tbody>
</table>

