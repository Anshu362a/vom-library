
<h2>📆 Today's Attendance</h2>

<div class="summary-boxes">
  <p><strong>✅ Total Present:</strong> <%= totalPresent %></p>
  <p><strong>❌ Not Marked:</strong> <%= totalAbsent %></p>

  <form
    action="/admin/today-attendance/export-csv"
    method="GET"
    style="display: inline"
  >
    <button class="btn btn-sm btn-success" type="submit">📄 Export CSV</button>
  </form>

  <form
    action="/admin/today-attendance/export-pdf"
    method="GET"
    style="display: inline"
  >
    <button class="btn btn-sm btn-danger" type="submit">📝 Export PDF</button>
  </form>
</div>

<table>
  <thead>
    <tr>
      <th>Sr.No.</th>
      <th>Name</th>
      <th>ID</th>
      <th>Entry</th>
      <th>Exit</th>
      <th>Status</th>
      <th>Hours Present</th>
    </tr>
  </thead>
  <tbody>
  <% students.forEach((student, idx) => { %>
    <tr>
      <td><%= idx + 1 %></td>
      <td><%= student.name %></td>
      <td><%= student.studentId %></td>
      <td><%= student.entryTimeFormatted %></td>
      <td><%= student.exitTimeFormatted %></td>
      <td><%= student.status %></td>
      <td><%= student.duration %></td>
    </tr>
  <% }) %>
</tbody>


</table>

<h3>❌ Students Absent Today</h3>

<table class="absent-table">
  <thead>
    <tr>
      <th>Sr.No.</th>
      <th>Name</th>
      <th>Student ID</th>
    </tr>
  </thead>
  <tbody>
    <% absentStudents.forEach((s, idx) => { %>
    <tr>
      <td><%= idx + 1 %></td>
      <td><%= s.name %></td>
      <td><%= s.studentId %></td>
    </tr>
    <% }) %>
  </tbody>
</table>
